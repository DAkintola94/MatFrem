@model MatFrem.Models.ViewModel.EditProductModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bekreft kjøp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/buystyle.css">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="bg-white p-4 rounded-3 shadow" style="max-width: 600px; width: 100%;">
            <h2 class="title mb-4 text-center">Gå videre med kjøpet</h2>
            <form method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Produkt ID</label>
                        <input type="text" asp-for="ProductID" class="form-control" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Produkt navn</label>
                        <input type="text" asp-for="ProductName" class="form-control" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Pris</label>
                        <input type="text" asp-for="ProductPrice" class="form-control" readonly>
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label">Kalori innhold per 100g</label>
                        <input type="text" asp-for="ProductCalories" class="form-control" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Produkt lokasjon</label>
                        <input type="text" id="locationIdForm" class="form-control" readonly>
                    </div>
                </div>
                <div class="mt-4 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary px-5">Bekreft kjøp</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<script> var modelValues = @Html.Raw(Json.Serialize(Model.ProductLocation));</script>
<script src="~/js/cartGeo.js"></script>
