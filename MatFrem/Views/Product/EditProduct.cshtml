@model MatFrem.Models.ViewModel.EditProductModel

<link href="~/css/homeStyle.css" rel="stylesheet" />

<h1> Opprett produkt </h1>
<div class="container py-5">
	<form method="post" asp-controller="Product" asp-action="EditProduct">
		<div class="mb-3">
			<label class="form-label"> Produkt ID </label>
			<input type="text" class="form-control" asp-for="ProductID" readonly/> <!-- the value in name must match the model's property -->
		</div>

		<div class="mb-3">
			<label class="form-label"> Produkt navn </label>
			<input type="text" class="form-control" asp-for="ProductName" /> <!-- the value in name must match the model's property -->
		</div>

		<div class="mb-3">
			<label class="form-label"> Pris </label>
			<input type="text" class="form-control" asp-for="ProductPrice" /> <!-- the value in name must match the model's property -->
		</div>

		<div class="mb-3">
			<label class="form-label"> Produkt beskrivelse </label>
			<input type="text" class="form-control" asp-for="ProductCategory" /> <!-- the value in name must match the model's property -->
		</div>

		<div class="mb-3">
			<label class="form-label"> Kalori innhold </label>
			<input type="text" class="form-control" asp-for="ProductCalories" /> <!-- the value in name must match the model's property -->
		</div>

		<div class="mb-3">

			<div class="d-flex">
				<button type="submit" class="btn btn-dark">
					Update
				</button>
			</div>
			<button type="submit" class="btn btn-danger ms-2" asp-action="Delete">
				Delete
			</button>
		</div>

	</form>
</div>

