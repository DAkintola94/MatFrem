@model MatFrem.Models.ViewModel.ProductViewModel



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <!-- Product Details -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <h3 class="card-title fw-bold">@Model.ProductViewName</h3>
                <h5 class="text-muted">Kategori: @Model.ViewCategoryName</h5>
                <!-- Divider -->
                <hr>

                <!-- Product Description -->
                <p class="card-text">
                    <strong>Detaljer:</strong> @Model.ProductViewDescription
                </p>
       
                
            </div>
        </div>

        <!-- Location Section -->
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h4 class="card-title fw-bold">Hentes ved</h4>
                <hr>
                <p class="card-text" id="geoConvert">
                     <strong>Butikknavn:</strong> @Model.ViewShopName
                </p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>


<script>var modelValues = @Html.Raw(Json.Serialize(Model.ProductViewLocation));</script>
<script src="~/js/geostringConvert.js"></script>
